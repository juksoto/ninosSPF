colorFontInfo		= #1F4788
colorWarning 		= #FFAB00

// scale gray
colorGrayDark  = #333
colorGrayLigth 	= #efefef

// Procesa si el color es oscuro o claro y genera el contraste
	isDarkoLigth(color)
		if luminosity(color) >= .5
			return colorGrayDark
		else
			return white
	// Hacer un color % mas oscuro o claro
	doDark(color)
		return darken(color, 20%)
	doLight(color)
		return lighten(color, 50%)
		
