//
// We declare the fonts for the headers, the content, the main font and the secondary font.
//

fontForHeaders()
	font-family: 'Montserrat', sans-serif;

fontForContent()
	font-family:  'Work Sans', sans-serif;

fontMain()
	font-family: 'Work Sans', sans-serif;

fontSecondary()
	font-family: 'Montserrat', sans-serif;
	
